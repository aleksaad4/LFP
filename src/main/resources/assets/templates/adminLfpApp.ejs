<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html lang="ru" data-op="<%= htmlWebpackPlugin.options.profile %>">
<head>
    <title>Интерфейс администратора</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
    <meta name="viewport" content="width=240, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=no"/>
    <meta name="format-detection" content="telephone=no"/>
    <meta name="msapplication-tap-highlight" content="no"/>

    <%= htmlWebpackPlugin.options.headerData %>
</head>

<body ng-controller="RootController as rCtrl" class="sw-toggled">

<div class="box box-warning" ng-if="rCtrl.isLoading">
    <div class="box-header with-border">
        <h3 class="box-title">Загрузка</h3>
    </div>
    <div class="overlay">
        <i class="fa fa-refresh fa-spin"></i>
    </div>
</div>

<div class="main" data-ui-view="main"></div>

</body>
</html>